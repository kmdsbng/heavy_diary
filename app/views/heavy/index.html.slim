= form_tag '/heavy/append', :method => 'POST' do
  input type='button' id='append_heavy' value='HEAVY'
  = hidden_field_tag "authenticity_token", form_authenticity_token, :id => 'authenticity_token'

div.Content
  - @heavy_count.times do
    span.Heavy = "HEAVY"


= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js'
javascript:
  var authenticity_token = $('#authenticity_token').val();
  $(function() {
    $('#append_heavy').click(function() {
      $.ajax({
        url: "/heavy/append",
        type: "POST",
        data: {
          authenticity_token: authenticity_token,
          "_method": "post"
        }
      }).done(function() {
        $('div.Content').append('<span class="Heavy">HEAVY</span>');
      });
    });
  });


